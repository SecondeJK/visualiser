{% extends 'VisualiserBundle::base.html.twig' %}

{% block body %}
<div class="container">
    <img width='50%' src='{{ asset('images/google-charts-logo.jpg') }}'>
    <p>
		The first part of this page is to render two Google Charts with API data
		that will be hardcoded into the Application classes. This architecture will display
		knowledge of a custom API client class to pipe to the charts, plus use of Guzzle
		to do some basic JSON interactions.
		</br>
		</br>
    </p>
    
    <div class="row">
		<div class="col-md-6">
			<h3>Container 1: Currently GS Geo Render with demo data</h3>
			<div id="regions_div" style="width: 100%; height: 200px;"></div>
		</div>
		<div class="col-md-6">
			<h2>CONTAINER TWO</h2>
		</div>
    </div>
    
</div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	<script src="{{ asset('js/hardcoded.geo.js') }}"></script>
{% endblock %}


